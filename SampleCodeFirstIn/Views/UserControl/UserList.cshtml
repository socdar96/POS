
@{
    ViewBag.Title = "UserList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Scripts/Datatable/CSS/bootstrap.min.css" rel="stylesheet" />
<link href="~/Scripts/Datatable/CSS/dataTables.bootstrap.min.css" rel="stylesheet" />
